@model Assignment2.Models.Product

@{
    ViewBag.Title = "Details";
}

<head>
    <link rel="Category-Style" href="~/Content/Product-Edit-Style.css" />
</head>
<body>
    <h1>Details</h1>
    <hr />
    <div>
        <div class="form-horizontal" style="text-align:center;">
            <div class="form-group" style="margin-top:20px;">
                <label>Film score</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </div>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label>Release date</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Price)
                </div>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label>Nation</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label>Singer</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </div>
            </div>
        </div>
    </div>

    <div class="Product-bottom">
        <div id="backLink">
            @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "nav-link" })
        </div>
    </div>

</body>