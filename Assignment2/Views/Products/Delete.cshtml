@model Assignment2.Models.Product

@{
    ViewBag.Title = "Delete";
}
<head>
    <link rel="Category-Style" href="~/Content/Product-Edit-Style.css" />
    <script src="~/Scripts/MyJavaScript.js"></script>
</head>
<body>
    <h1>Delete</h1>
    <hr />
    <div>
        <div class="form-horizontal" style="text-align:center;">
            <div class="form-group" style="margin-top:20px;">
                <label>Film score</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </div>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label>Release date</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Price)
                </div>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label>Nation</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label>Singer</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </div>
            </div>
        </div>
    </div>
    <h3 style="text-align:center;margin-bottom:30px;margin-top:30px;color:#fff;">Are you sure you want to delete this?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="Product-bottom">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" onclick="deleteFunction()" class="btn btn-default" />
            </div>
            <div id="backLink">
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "nav-link" })
            </div>
        </div>
    }
</body>
